#!/bin/bash
#
# Deploy site to production
#
# Setup ~/.ssh/config with a Host named "daysuntillatenightdeploy" and configure
# a shared SSH keypair setup between your local machine and the remote host
# to do password-less deployment.

rsync -avz --exclude-from=bin/exclude.txt --delete ./ daysuntillatenightdeploy:/var/www/daysuntillatenight.com/web
echo "\nDeployed site to remote host\n"
